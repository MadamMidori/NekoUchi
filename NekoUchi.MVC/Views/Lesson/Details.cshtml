@model NekoUchi.MVC.Model.LessonView
@{
    ViewData["Title"] = "Lekcija";
    ViewData["lessonName"] = Model.Name;
    ViewData["courseId"] = Model.CourseIdentification;
}

<h2>Lekcija</h2>

<div>
    <div class="form-horizontal">
        <hr />
        <div class="form-group">
            <label asp-for="Name" class="col-md-2"></label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2"></label>
            <div class="col-md-10">
                @Html.DisplayFor(model => model.Description)
            </div>
        </div>       
    </div>
</div>

<div>
    <ul class="nav nav-tabs">
        <li class="active"><a data-toggle="tab" href="#words">Riječi</a></li>
        <li><a data-toggle="tab" href="#sentences">Rečenice</a></li>
        <li><a data-toggle="tab" href="#tests">Testovi</a></li>
    </ul>

    <div class="tab-content">
        <div id="words" class="tab-pane active">
            @Html.Partial("Words", Model.Words)
        </div>
    </div>
</div>


<div>
    <a asp-action="Details" asp-controller="Course" asp-route-token="@ViewData["token"]" asp-route-id="@Model.CourseIdentification">Natrag na tečaj</a>
</div>


