@model IEnumerable<NekoUchi.MVC.Model.SubscribedCourseView>

@{
    ViewData["Title"] = "Upisani tečajevi";
}

<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="~/js/site.js" type="text/javascript"></script>

<h3>Upisani tečajevi</h3>

<table class="table">
    <tr>
        <th>
            Ime tečaja
        </th>
        <th>
            Ime autora
        </th>
        <th>
            Opis
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a asp-area="" asp-controller="Course" asp-action="Details" asp-route-id="@item.Identification" asp-route-token="@ViewData["token"]">@Html.DisplayFor(modelItem => item.CourseName)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseAuthor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-area="" asp-controller="Course" asp-action="Unsubscribe" asp-route-courseId="@item.Identification" asp-route-token="@ViewData["token"]">Ispiši me</a>
            </td>
        </tr>
    }
</table>

